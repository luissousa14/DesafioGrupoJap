@model Veiculo

@{
    var errorMessage = TempData["ErrorMessage"];
}

<h1>Remover Veiculo</h1>

<h3>Tem a certeza que pretende remover este Veiculo?</h3>
<div>
    <div class="card">
        <div class="card-body">
            <form asp-action="Delete">

                <div class="form-group mb-3">
                    <label asp-for="Marca" class="control-label"></label>
                    <input type="text" class="form-control" value="@Model.Marca" disabled />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Modelo" class="control-label"></label>
                    <input type="text" class="form-control" value="@Model.Modelo" disabled />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Matricula" class="control-label"></label>
                    <input type="text" class="form-control" value="@Model.Matricula" disabled />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AnoFabrico" class="control-label"></label>
                    <input type="text" class="form-control" value="@Model.AnoFabrico" disabled />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Estado" class="control-label"></label>
                    <input type="text" class="form-control" value="@(Model.Estado ? "Alugado" : "Disponivel")" disabled />
                </div>

                <div class="form-group mb-3">
                    <span class="text-danger">@errorMessage</span>
                </div>

                <div class="form-group d-flex flex-row justify-content-between">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Remover" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>
