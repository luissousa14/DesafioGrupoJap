@model GrupoJap.Models.ContratoAluguer

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover Veiculo</h1>

<h3>Tem a certeza que pretende remover este Veiculo?</h3>
<div>
    <div class="card">
        <div class="card-body">
            <form asp-action="Delete">

                <div class="form-group mb-3">
                    <label asp-for="Cliente" class="control-label"></label>
                    <input type="text" class="form-control" value="@Model.Cliente.NomeCompleto/@Model.Cliente.Email" disabled />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Veiculo" class="control-label"></label>
                    <input type="text" class="form-control" value="@Model.Veiculo.Marca/ @Model.Veiculo.Modelo - @Model.Veiculo.Matricula" disabled />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="QuilometragemInicial" class="control-label"></label>
                    <input type="text" class="form-control" value="@Model.QuilometragemInicial" disabled />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DataInicio" class="control-label"></label>
                    <input type="text" class="form-control" value="@Model.DataInicio.ToString("dd/MM/yyyy")" disabled />
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DataFim" class="control-label"></label>
                    <input type="text" class="form-control" value="@Model.DataFim.ToString("dd/MM/yyyy")" disabled />
                </div>

                <div class="form-group d-flex flex-row justify-content-between">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Remover" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

